#include <stdio.h>
#include <string.h>

int main() {
    char palabra[100];
    int len;

    printf("Ingrese una palabra: ");
    scanf("%s", palabra);

    len = strlen(palabra);

    printf("Palabra invertida: ");
    for (int i = len - 1; i >= 0; i--) {
        printf("%c", palabra[i]);
    }
    printf("\n");

    return 0;
}
